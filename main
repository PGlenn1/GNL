#include "get_next_line.h"

int test_buffer(int fd)
{
    static char buffer[BUFFER_SIZE + 1];
    int ret;

    printf("buffer1:%s\n", buffer);
    ret = read(fd, buffer, BUFFER_SIZE);
    if (ret < 0)
    {
        printf("debug\n");
        return (0);
    }
    buffer[ret] = 0;
    char *str;
    str = buffer;
    printf("buffer2:%s\n", buffer);
    printf("str:%s\n", str);
    return (0);
}

int main(void)
{
    int fd;
    fd = open("alphabet", O_RDONLY);
    if (fd < 0)
        return (1);
    int i = 0;
    while (i < 10)
    {
        test_buffer(fd);
        i++;
    }
}